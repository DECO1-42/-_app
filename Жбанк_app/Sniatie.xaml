<Window x:Class="Жбанк_app.Sniatie"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Жбанк_app"
        mc:Ignorable="d"
        Title="Sniatie" Height="600" Width="400">
    <Grid>
        <TextBox x:Name="sumBox" HorizontalAlignment="Center" MaxLength="7" Height="30" TextWrapping="Wrap" VerticalAlignment="Center" Width="200" PreviewTextInput="sumBox_PreviewTextInput"/>
        <Label Content="Введите сумму снятия кратную 100" HorizontalAlignment="Center" Height="30" Margin="0,247,0,0" VerticalAlignment="Top" Width="230"/>
        <Button x:Name="SniatieBtn" Content="Снять" HorizontalAlignment="Center" Height="54" Margin="0,388,0,0" VerticalAlignment="Top" Width="196" Click="SniatieBtn_Click"/>
        <Button x:Name="Balance" Content="Нажмите чтобы узнать баланс" HorizontalAlignment="Center" Height="54" Margin="0,99,0,0" VerticalAlignment="Top" Width="196" AutomationProperties.IsColumnHeader="True" Click="Balance_Click"/>
        <Button x:Name="Back" Content="Назад" HorizontalAlignment="Left" Height="27" Margin="331,24,0,0" VerticalAlignment="Top" Width="59" Click="Back_Click"/>

    </Grid>
</Window>
